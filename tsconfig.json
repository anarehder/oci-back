{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "outDir": "dist",
        "noImplicitAny": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "types": ["node", "mysql2"],
        "rootDirs": ["src", "tests"],
        "baseUrl": "src",
    },
    "exclude": ["node_modules"],
    "include": ["src", "tests", "src/**/*.ts"]
}
